<resources>
    <!-- STYLE DIALOG DARK / LIGHT -->
    <style name="CutShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="TitlePaneStyleCenter" parent="MaterialAlertDialog.MaterialComponents.Title.Panel.CenterStacked">
        <item name="android:padding">16dp</item>
    </style>

    <style name="TitleIconStyleCenter" parent="MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked">
    </style>

    <!-- STYLE DIALOG DARK -->
    <style name="AlertDialogThemeDark" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">#121212</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/TitlePaneStyleCenter</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyleDark</item>
        <item name="materialAlertDialogTitleIconStyle">@style/TitleIconStyleCenter</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyleDark</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleDark</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleDark</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyleDark</item>
        <item name="shapeAppearanceMediumComponent">@style/CutShapeAppearance</item>
    </style>

    <style name="TitleTextStyleDark" parent="MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="BodyTextStyleDark" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#7e7e7e</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="PositiveButtonStyleDark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#1C9B21</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="NegativeButtonStyleDark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#E35A5A</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="NeutralButtonStyleDark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#DCD7D7</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!-- STYLE DIALOG LIGHT -->

    <style name="AlertDialogThemeLight" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">#FFFFFF</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/TitlePaneStyleCenter</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyleLight</item>
        <item name="materialAlertDialogTitleIconStyle">@style/TitleIconStyleCenter</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyleLight</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleLight</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleLight</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyleLight</item>
        <item name="shapeAppearanceMediumComponent">@style/CutShapeAppearance</item>
    </style>

    <style name="TitleTextStyleLight" parent="MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="android:textColor">#0C0C0C</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="BodyTextStyleLight" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#6F6E6E</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="PositiveButtonStyleLight" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#09A495</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="NegativeButtonStyleLight" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#B92F2F</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="NeutralButtonStyleLight" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#313030</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
